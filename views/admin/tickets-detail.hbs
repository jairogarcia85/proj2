<h1>Details View</h1>
<br>
<a class="button is-primary " href="/tickets/create-ticket">Create Ticket</a>

<a class="button is-primary " href="/client">My Tickets</a>
<br>
<hr>

<div class="ticket-box ">
  <h3>{{this.title}} <span class="separator">///</span> Status: {{this.status}} </h3> <br>
  <p><strong>Description:</strong> {{this.description}}</p> <br>

  <form action="/user/tickets/{{this._id}}" method="POST" id="details">
    <label><strong>Status: </strong></label>
    <select class="select" name="status" form="details">
      <option value="Open">Open</option>
      <option value="Pending">Pending</option>
      <option value="Closed">Closed</option>
    </select>
    <p><br>
      <input class="button is-primary" type="submit" value="Submit">
    </p>
    <br>
  </form>
  <ul>
    {{#if userComment}}
    {{#each userComment as |comment|}}
    <p>
      <li>Reply: {{comment}}</li>
    </p>
    {{/each}}
    {{/if}}
  </ul>
  <form action="/tickets/view/{{this._id}}" method="POST" id="details">
    <div>
      <br>
      <button class="button is-primary" type="button" name="tab" value="Reply" onclick="show2();">Reply</button>
      <div id="comment" class="hide">
        <hr>
        <p>Add your reply/comment</p>
        <input class="input" type="input" name="one">
        <input class="button is-primary" type="submit" value="Submit">
      </div>
    </div>
  </form>
</div>

<script>
  function show2() {
    document.getElementById('comment').style.display = 'block';
  }
</script>